<!-- REGISTER FORM -->
<%= form_for(@user, :html => { :id => 'register-form'}) do |f| %>
	<%= render 'shared/error_messages' %>
	<div class="form-group">
		<%= f.text_field :name, :placeholder => "Nome", :class => "form-control", :id => "username"  %>
	</div>
	<div class="form-group">
		<%= f.email_field :email, :placeholder => "Endereço de Email", :class => "form-control", :id => "email"  %>
	</div>
	<div class="form-group">
		<%= f.password_field :password, :placeholder => "Senha", :class => "form-control", :id => "password"  %>
	</div>
	<div class="form-group">
		<%= f.password_field :password_confirmation, :placeholder => "Confirmar Senha", :class => "form-control", :id => "confirm-password"  %>
	</div>
	<div class="form-group">
		<div class="row">
			<div class="col-sm-6 col-sm-offset-3">
	    	<%= f.submit "Registrar", class: "form-control btn btn-register", id:"register-submit" %>
			</div>
		</div>
	</div>
	<div class="form-group">
 	  <div class="row">
 			<div class="col-lg-12">
 				<div class="text-center">
					<p>Já possui conta? <%= link_to "Entrar!", login_path,style:"background-color:transparent" %></p>
				</div>
 			</div>
 		</div>
 	</div>
<% end %>